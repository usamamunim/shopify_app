<div class="container">
<h3><b><i>If you don't want update any field, don't change it</i></b></h3>
<br/><br/>
<%= form_with modal: @product, url: product_path(@product.id), method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :Product_title%>
    <%= f.text_field "title" , class: "form-control", value: @product.title%>
  </div>
  <div class="form-group">
    <%@product.variants.each do |variant|%>
      <b><%= f.label :variant_detail%></b><br/>
      <%= f.label :Size%>
      <%= f.text_field  "#{variant.id}_size", class: "form-control", placeholder: "Enter new price", value: variant.option1%>
      <%= f.label :Color%>
      <%= f.text_field  "#{variant.id}_color", class: "form-control", placeholder: "Enter new price", value: variant.option2%>
      <%= f.label :Price%>
      <%= f.text_field  "#{variant.id}_price", class: "form-control", placeholder: "Enter new price", value: variant.price%>
      <br/><br/>
    <%end%>
  </div>

  <%= f.submit "Change Product Details"%>
<% end %>
<div class="container">
